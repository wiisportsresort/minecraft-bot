  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run query",
      "program": "${workspaceFolder}/server/query.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Run debug",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "run",
        "debug"
      ],
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ]
}
